@using SmartLMS.Domain.Resources
<div class="modal fade" id="students-list" tabindex="-1" role="dialog" aria-labelledby="Classroom's students" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="material-icons">clear</i>
                </button>
                <h4 class="modal-title">@Resource.StudentsInClassroomTitle</h4>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th>
                            @Html.DisplayName(Resource.StudentNameFieldName)
                        </th>
                        <th>
                            @Html.DisplayName(Resource.SubscribedAtColumn)
                        </th>
                    </tr>
                    </thead>
                    <tbody id="students-container"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-simple" data-dismiss="modal">@Resource.CloseButton</button>
            </div>

        </div>
    </div>
</div>

<script type="text/x-handlebars-template" id="classroom-students-template">
        {{#each this}}
        <tr>
            <td>
                {{Name}}
            </td>
            <td>
                {{toShortDateString SubscriptionDate}}
            </td>
        </tr>
        {{/each}}
        {{#equals Count 0}}
        <tr>
            <td colspan="2" class="text-center">
                @Resource.NoStudentsAdmin
            </td>
        </tr>
        {{/equals}}
    </script>