@using SmartLMS.Domain.Resources
<div class="modal fade" id="courses-list" tabindex="-1" role="dialog" aria-labelledby="Included courses" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="material-icons">clear</i>
                </button>
                <h4 class="modal-title">@Resource.CoursesInClassroomTitle</h4>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th>
                            @Html.DisplayName(Resource.CourseNameFieldName)
                        </th>
                    </tr>
                    </thead>
                    <tbody id="courses-container"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-simple" data-dismiss="modal">@Resource.CloseButton</button>
            </div>

        </div>
    </div>
</div>
<script type="text/x-handlebars-template" id="classroom-courses-template">
        {{#each this}}
        <tr>
            <td>
                {{Name}}
            </td>
        </tr>
        {{/each}}
        {{#equals Count 0}}
        <tr>
            <td class="text-center">
                @Resource.NoCoursesAdmin
            </td>
        </tr>
        {{/equals}}
    </script>